<%= render "shared/header" %>

<%= form_with model: @user, url: user_registration_path , class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ユーザー情報入力
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">姓</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :last_name, class:"input-default", id:"last_name", placeholder:"例) 佐藤", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :first_name, class:"input-default", id:"first_name", placeholder:"例) 花子", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <%= f.label :アイコン, class: "form-text" %>
      <span class="indispensable">必須</span>
    <br><%= f.file_field :image, id:"image", accept: "image/*" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">職種</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:job_id, Job.all, :id, :name, {}, {class:"input-default", id:"job-category"}) %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">趣味</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :hobby, class:"input-default", id:"hobby", placeholder:"例) 釣り、キャンプ、ドライブ", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">自己紹介文</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :context, class:"input-context", rows: 10, id:"context", placeholder:"例) 100文字以内", maxlength:"100" %>
  </div>
  <div class='register-btn'>
    <%= f.submit "ユーザー登録" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>
