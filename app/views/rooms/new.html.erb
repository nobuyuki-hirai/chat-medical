<%= render "shared/header" %>

<div class='room-main'>
  <div class='room-new__title'>チャットルーム新規作成
  </div>
  <%= form_with(model: @room, local: true) do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
      <div class='room-new'>
        <%= f.label :name, 'チャットルーム名', class: 'room-name' %>
        <%= f.text_field :name, class: 'room-text' %>
        <div class='image-form'>
        <%= f.file_field :image, id:"image", accept: "image/*", class: 'room-image' %>
        <span class="indispensable">必須</span>
        </div>
      </div>

    <%= form_for(@room) do |f| %>
    <div class='invitation-user__form'>
      <div class='select-form'>
        <%= f.label :name, '招待するユーザー', class: 'invitation-user' %>
        <select class='invitation-user__list'>
          <option value="" selected disabled class='user-select'>ユーザーを選択して下さい</option>
          <% User.all.each do |user| %>
              <option value="<%= user.full_user %>"><%= user.full_user %></option>
          <% end %>
        </select>
      </div>
      <div class="selected-user__list">
      </div>
        <div class="actions">
          <%= f.submit 'ルーム作成', class: 'submit-button' %>
        </div>
    </div>
    <% end %>
  <% end %>
</div>