<div class="simple-calendar">
  <div class="calendar-heading">
    <div class="previous-link">
      <%= link_to t('simple_calendar.previous', default: '<<'), calendar.url_for_previous_view %>
    </div>
    <div class="calendar-title">
      <%= t('date.month_names')[start_date.month] %> <%= start_date.year %>
    </div>
    <div class="next-link">
      <%= link_to t('simple_calendar.next', default: '>>'), calendar.url_for_next_view %>
    </div>
    <div class="event-new">
      <%= link_to "作成", "#", class: "event-new__name"%>
    </div>
    <div class="event-destroy">
      <%= link_to "削除", "#", method: :delete, class: "event-destroy__name", data: { confirm: '本当に削除しますか？' } %>
    </div>
    <div class="event-edit" >
      <%= link_to "編集", "#", class: "event-edit__name"%>
    </div>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <% date_range.slice(0, 7).each do |day| %>
        <th><%= t('date.abbr_day_names')[day.wday] %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% date_range.each_slice(7) do |week| %>
      <tr>
        <% week.each do |day| %>
          <% classes = calendar.td_classes_for(day) %>
          <% classes << ' saturday' if day.saturday? %>
          <% classes << ' sunday' if day.sunday? %>
          <%= content_tag :td, class: classes do %>
            <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
              <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
            <% else %>
              <% passed_block.call day, sorted_events.fetch(day, []) %>
            <% end %>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
